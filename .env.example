# QuizMarker Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===================================
# Flask Configuration
# ===================================

# CRITICAL: Set a strong secret key for sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=your-super-secret-key-here-change-this

# Environment (development, staging, production)
FLASK_ENV=development

# ===================================
# Database
# ===================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Local development example:
DATABASE_URL=postgresql://localhost/quizmarker_dev

# Production example (Railway/Render will auto-populate this):
# DATABASE_URL=postgresql://user:password@host.railway.app:5432/railway

# ===================================
# OpenAI API
# ===================================

# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===================================
# SendGrid Email Service
# ===================================

# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Email sender address (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=hello@yourdomain.com

# ===================================
# AWS S3 File Storage (Phase 2)
# ===================================

# AWS credentials (create IAM user with S3 access only)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 bucket name
S3_BUCKET_NAME=quizmarker-uploads-dev
S3_REGION=us-east-1

# ===================================
# Redis (Phase 3 - Background Jobs)
# ===================================

# Redis connection URL
# Local development:
REDIS_URL=redis://localhost:6379/0

# Production (Railway/Render will auto-populate):
# REDIS_URL=redis://default:password@host.railway.app:6379

# ===================================
# Sentry Error Monitoring (Phase 6)
# ===================================

# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# ===================================
# Application Configuration
# ===================================

# Base URL for the application (used in emails)
APP_BASE_URL=http://localhost:5000

# Max upload file size in MB
MAX_UPLOAD_SIZE_MB=16

# ===================================
# Feature Flags (Optional)
# ===================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_BACKGROUND_JOBS=false

# ===================================
# Rate Limiting (Phase 7)
# ===================================

# Requests per hour per user
RATE_LIMIT_PER_HOUR=100

# Uploads per hour per user
UPLOAD_RATE_LIMIT_PER_HOUR=10
